            @Html.DropDownList("companyId", ViewBag.Companies as SelectList, "Select a Company", new { @class = "form-control" })

            <!--end::Select2-->
            <!--begin::Description-->
            <div class="text-muted fs-7 mb-7">Add product to a company.</div>
            <!--end::Description-->
            <!--end::Input group-->
            <!--end::Input group-->
